<div class="px-4 py-5 my-5 text-center">
    <img class="d-block mx-auto mb-2" src="/logo sem fundo.png" alt="" width="auto" height="150">
    <h1 class="display-5 fw-bold">Project Kanban</h1>
    <div class="col-lg-3 mx-auto">
        <form action="/login" method="POST">
            <div class="mb-2">
                <label for="username" class="form-label">Usuário</label>
                <input type="text" class="form-control" name="username" placeholder="Usuário" required>
            </div>
            <div class="mb-2">
                <label for="password" class="form-label">Senha</label>
                <input type="password" class="form-control" name="password" placeholder="Senha" required>
            </div>
            <button type="submit" class="btn btn-primary mt-2">Entrar</button>
        </form>
    </div>
</div>